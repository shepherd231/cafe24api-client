{
  "name": "cafe24api-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/cafe24api-client/src",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm rimraf dist ../../dist ./generators/**/gen",
        "cwd": "packages/cafe24api-client"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc",
        "cwd": "packages/cafe24api-client"
      }
    },
    "generate-endpoints": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node generators/generate-endpoints/index.js",
        "cwd": "packages/cafe24api-client"
      }
    },
    "build:cjs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env BABEL_ENV=build node build",
        "cwd": "packages/cafe24api-client"
      }
    },
    "build:esm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cross-env BABEL_ENV=build babel src --out-dir dist/esm --copy-files",
          "node build/esm"
        ],
        "parallel": false,
        "cwd": "packages/cafe24api-client"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run cafe24api-client:build:cjs",
          "nx run cafe24api-client:build:esm"
        ],
        "parallel": false,
        "cwd": "packages/cafe24api-client"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm prettier --write \"src/**/*.js\" \"types/**/*.d.ts\" --ignore-path .prettierignore",
        "cwd": "packages/cafe24api-client"
      }
    },
    "build:production": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run cafe24api-client:build",
          "# ",
          "# We shallow copy every file in `dist` directory to project root directory",
          "# as this package's actual entrypoint should locate at the project root directory.",
          "# ",
          "# See `package.json` for this package's configuration",
          "mv dist/* ."
        ],
        "cwd": "packages/cafe24api-client",
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "# Check if we need to publish this package",
          "_PUBLISH=$(node ../../ci/publish-is-needed.js ./package.json)",
          "# ",
          "# If we don't need to publish, exit",
          "if [ \"$_PUBLISH\" = \"false\" ]; then",
          "  echo \"No need to publish.\"",
          "  exit 0",
          "fi",
          "# ",
          "# If we need to publish, publish",
          "pnpm publish --access public --no-git-checks"
        ],
        "cwd": "packages/cafe24api-client",
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/cafe24api-client/jest.config.js"
      }
    }
  }
}