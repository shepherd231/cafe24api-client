{
  "name": "cafe24-webhook-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/cafe24-webhook-utils/src",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm rimraf dist ../../dist ./generators/**/gen",
        "cwd": "packages/cafe24-webhook-utils"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc",
        "cwd": "packages/cafe24-webhook-utils"
      }
    },
    "generate-interfaces": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node generators/generate-interfaces/index.js",
        "cwd": "packages/cafe24-webhook-utils"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --project tsconfig.build.json",
        "cwd": "packages/cafe24-webhook-utils"
      }
    },
    "build:production": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run cafe24-webhook-utils:build",
        "cwd": "packages/cafe24-webhook-utils"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm prettier --write \"src/**/*.ts\" --ignore-path .prettierignore",
        "cwd": "packages/cafe24-webhook-utils"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "# Check if we need to publish this package",
          "_PUBLISH=$(node ../../ci/publish-is-needed.js ./package.json | tail -n 1)",
          "# ",
          "# If we don't need to publish, exit",
          "if [ \"$_PUBLISH\" = \"false\" ]; then",
          "  echo \"No need to publish.\"",
          "  exit 0",
          "fi",
          "# ",
          "# If we need to publish, publish",
          "pnpm publish --access public --no-git-checks"
        ],
        "cwd": "packages/cafe24-webhook-utils",
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/cafe24-webhook-utils/jest.config.js"
      }
    }
  }
}